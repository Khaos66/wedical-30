mixin modal(id, header, primary, secondary, form, errorId, errorText)
    div.modal.fade(role='dialog', tabindex='-1', id=id)
        div.modal-dialog(role='document')
            div.modal-content
                div.modal-header
                    h5.modal-title= header
                    button.close(type='button', data-dismiss='modal', aria-label=__('Close'))
                        span(aria-hidden='true') &times;
                div.modal-body
                    block
                div.modal-footer
                    if errorId
                        div.alert.alert-danger.collapse(id=errorId)= errorText || ''
                    button.btn.btn-primary(type=form ? 'submit' : 'button', form=form || '')= primary
                    button.btn.btn-secondary(type='button', data-dismiss='modal')= secondary

