mixin modal(id, header, primary, secondary)
    div.modal.fade(role='dialog', tabindex='-1', id=id)
        div.modal-dialog(role='document')
            div.modal-content
                div.modal-header
                    h5.modal-title= header
                    button.close(type='button', data-dismiss='modal', aria-label=__('Close'))
                        span(aria-hidden='true') &times;
                div.modal-body
                    block
                div.modal-footer
                    button.btn.btn-primary(type='button')= primary
                    button.btn.btn-secondary(type='button', data-dismiss='modal')= secondary

