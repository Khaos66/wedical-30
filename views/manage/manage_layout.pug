include ../includes/_navbar.pug

doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(charset='UTF-8')
    title= title
    link(rel='stylesheet', type='text/css', href='/styles/bootstrap.min.css')
    link(rel='stylesheet', type='text/css', href='/styles/main.css')
    link(rel='stylesheet', type='text/css', href='/styles/buttons.css')
    link(rel='stylesheet', type='text/css', href='/styles/bootstrap.tiles.css')
    link(rel='stylesheet', type='text/css', href='/styles/fontawesome.min.css')
    link(rel='stylesheet', type='text/css', href='/styles/datatables.min.css')
    link(rel='stylesheet', type='text/css', href='/styles/datatables.bootstrap4.min.css')
  body
    #grid
    +pagenav
    main.mt-2
      div.container.bg-light.rounded
        div.row
          div.col
            if breadcrumps
              nav.my-2(aria-label='breadcrumb')
                ol.breadcrumb
                  each crump, index in breadcrumps
                    - var crumpActive= index+1===breadcrumps.length
                    li(class=crumpActive ? 'breadcrumb-item active' : 'breadcrumb-item', aria-current=crumpActive ? 'page' : '')
                      if crumpActive
                        = __(crump.title)
                      else
                        a(href=crump.link)= __(crump.title)

            block content
    script(src='/js/jquery.min.js')
    script(src='/js/jquery.endless-input.js')
    script(src='/js/jquery.form.min.js')
    script(src='/js/bootstrap.bundle.min.js')
    script(src='/js/dataTables.min.js')
    script(src='/js/dataTables.bootstrap4.min.js')
    script(src=`/js/${locale}.js`)
    script(src='/js/main.js')
