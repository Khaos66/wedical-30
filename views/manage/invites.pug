extends manage_layout.pug

include ../includes/_modals.pug
include ../includes/_icons.pug
include ../includes/_forms.pug


block content
    span.table-add.float-right.mb-3.mr-2
        a.text-success(href='#', data-toggle='modal', data-target='#addInviteModal')
            i.fas.fa-plus.fa-2x(aria-hidden='true')

    table.data-table.table.table-responsive-md#invitesTable(data-page-length='25',
                                                        data-action-column='1'
                                                        data-delete-modal='#deleteInviteModal'
                                                        data-edit-modal='#editInviteModal'
                                                        data-edit-form='#editInviteForm'
                                                        data-order='[[ 0, "asc" ]]',
                                                        data-ajax='/manage/invites/list',
                                                        data-columns='[{"data": "name"},{"data": "_id"}]')
        colgroup
            col(width='50%')
            col(width='1')
        thead
            tr
                th= __('Name')
                th= __('Action')

    +wideModal('addInviteModal',
                __('Add Invite'),
                __('Add'),
                __('Abort'),
                'addInviteForm',
                __('Error while transmitting data'))(class='clear-form')
        form.ajaxForm.needs-validation#addInviteForm(data-modal='#addInviteModal',
                                data-error='#addInviteModalError',
                                data-redraw-table='#invitesTable'
                                method='post',
                                action='/manage/invites')
            +editFormInput('name', __('Name'), __('Full Name'), true, __('This field is required'))
            +editFormGroup('type', __('Type'))
                div.btn-group.btn-group-toggle(data-toggle='buttons')
                    label.btn.lazy-tooltip.btn-secondary.active
                        input(type='radio', name='type', value='guestlist', autocomplete='off', data-toggle='radio' data-target='.newInfiteToggle', checked)
                        span(data-toggle='tooltip', title=__('Choose recipients from the guest list'))= __('Guest-List')
                    label.btn.lazy-tooltip.btn-secondary
                        input(type='radio', name='type', value='whildcard', autocomplete='off', data-toggle='radio' data-target='.newInfiteToggle')
                        span(data-toggle='tooltip', title=__('Send a first-come first-in invite to a group of people'))= __('Wildcard')
            div.newInfiteToggle.collapse.show
                +editFormGroup('invitees', __('Invitees'))
                    select.form-control.quickMultiSelect(name='intitees', multiple='multiple', data-left-header= __('Guests'), data-right-header= __('Selected'), data-placeholder= __('Search...'))
                        each guest in guests
                            option(value= guest._id)= `${guest.name} ${guest.group ? `(${guest.group})` : ''}`
            div.newInfiteToggle.collapse
                +editFormInput('tickets', __('Tickets'), __('Amount of free tickets'), false, __('This field is required'), 'number', 4)


