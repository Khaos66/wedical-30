doctype transitional
html(xmlns='http://www.w3.org/1999/xhtml')
    head
        meta(http-equiv='Content-Type' content='text/html; charset=UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        title= __('You\'re invited!')
    body(style='margin: 0; padding: 0; font-family: Consolas, Arial, Helvetica, sans-serif')
        table(align='center' cellpadding='0' cellspacing='0' width='600')
            tr
                td
                    img(src='cid:BB30.png' height='20' width='20')
            tr
                td(style='padding-top: 40px; padding-bottom: 30px')
                    h1= __('Hi {{name}}', { name: guest.name })
                    p= __('I want to invite you to my 30. birthday on 5.4.2020!')
                    p= __('For more information follow the link below')
                    p
                        a(href=guest.inviteLink)= guest.inviteLink
                    p= __('Best regards,')
                    p= __('Benjamin Buchfink')
            tr
                td
                    p Powered by
                        a(href='https://github.com/KhaosCoders/wedical') Wedical